<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="app.controller.CommentsViewController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox spacing="15" fx:id="commentsList" AnchorPane.bottomAnchor="0" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <children>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="20" style="-fx-padding: 0 0 0 30;">
                <children>
                    <VBox alignment="CENTER">
                        <children>
                            <ImageView fx:id="profileImageView" fitHeight="42.0" fitWidth="34.0" pickOnBounds="true">
                                <image>
                                    <Image url="@../resources/icons/paysage.jpg" />
                                </image>
                            </ImageView>

                        </children>
                    </VBox>


                    <VBox alignment="CENTER_LEFT">
                        <children>
                            <Label fx:id="usernameLabel" text="username">
                                <font>
                                    <Font name="Arial Bold" size="18.0" />
                                </font></Label>
                        </children>
                    </VBox>

                    <Label>
                        Contenu du commentaire
                    </Label>
                </children>
            </HBox>
        </children>
    </VBox>


</AnchorPane>
